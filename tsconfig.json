{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types"],
    "rootDir": "./lib",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": ["./lib/**/*.ts", "./lib/**/*.js"],
  "exclude": ["node_modules", "build"]
}
